{
  "dependencies": {
    "adm-zip": "^0.5.16",
    "argon2": "^0.43.0",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "dotenv": "^17.0.1",
    "entities": "^6.0.1",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "extract-zip": "^2.0.1",
    "file-type": "^16.5.4",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.1",
    "node-cron": "^4.1.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "sharp": "^0.34.2",
    "validator": "^13.15.15"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -f docker/Dockerfile -t kirby-chope .",
    "docker:run": "docker run -p 3000:3000 kirby-chope",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up --build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "playwright test",
    "test:integration:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:integration"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@playwright/test": "^1.53.1",
    "@types/node": "^24.0.7",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "jest-html-reporters": "^3.1.7",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./html-report",
          "filename": "report.html",
          "expand": true
        }
      ]
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/**/*.test.js",
      "!**/node_modules/**"
    ]
  }
}
