localhost {
    root * /usr/share/caddy
    @rootPath path /
    rewrite @rootPath /home
    
    try_files {path} {path}.html {path}/index.html
    
    file_server
    
    reverse_proxy /api/* backend:3000
    
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
    }
}